<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                            {{titulo}} 
                            </h3>
                        </a>
                        <p class="m-2">{{descrip}}</p>
                        <p>{{timeago creado}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger btn-sm">Borrar</a>
                        <a href="/links/editar/{{id}}" class="btn btn-secondary btn-sm">Editar</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>AÃºn no hay enlaces...</p>
                    <a href="/links/add">Crea uno!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>
