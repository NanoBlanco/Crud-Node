<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/editar/{{link.id}}" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="titulo" value="{{link.titulo}}" />
                        </div>
                        <div class="form-group">
                            <input type="url" class="form-control" name="url" value="{{link.url}}" />
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="descrip" rows="2" >{{link.descrip}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>